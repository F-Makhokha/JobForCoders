@model JobsForCoders.Models.SearchEmployers

<div class="jumbotron">
    <h1>Jobs for #Coders</h1>
    <h3>If you are a Developer looking for a new position in Vancouver BC, this is your place.</h3>
</div>

@using (Html.BeginForm("EmployersList", "Search", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-5">
            <h4 class="whatwhere">City</h4>
            @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Vancouver" })
        </div>
        <div class="col-md-5">
            <h4 class="whatwhere">Position</h4>
            @Html.TextBoxFor(model => model.Position, new { @class = "form-control", placeholder = "Backend" })
        </div>
        <div class="col-md-5">
            <h4 class="whatwhere">Salary</h4>
            @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", placeholder = "60.000" })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Find Employers" class="btn btn-default btn-login" />
        </div>
    </div>
}