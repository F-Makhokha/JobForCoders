@model JobsForCoders.Models.Search
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Jobs for #Coders</h1>
    <h3>If you are a Developer looking for a new position in Vancouver BC, this is your place.</h3>
</div>


@using (Html.BeginForm("JobList", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-5">
            <h4 class="whatwhere">What</h4>
            @Html.TextBoxFor(model => model.What, new { @class = "form-control", placeholder = "" })
            <label class="labelcolor">job title, keywords or company name</label>
        </div>
        <div class="col-md-5">
            <h4 class="whatwhere">Where</h4>
            @Html.TextBoxFor(model => model.Where, new { @class = "form-control", placeholder = "Vancouver,BC" })
            <label class="labelcolor">	city or province</label>
        </div>
        <div class="col-md-2">
            <input type="submit" value="Find Jobs" class="btn btn-default btn-login" />
        </div>
    </div>
}