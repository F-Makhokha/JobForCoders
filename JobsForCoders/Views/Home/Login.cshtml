@model JobsForCoders.Models.Login
@{
    ViewBag.Title = "Login";
}
<div class="logintext">
    <h4>Sign in to check all the positions available for you considering your previous search.</h4>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Job Seeker Login</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @ViewBag.MessageErrorLogin
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email,  new { @class = "form-control", placeholder = "yourmail@example.com" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-lg btn-block btn-default" />
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="member">
    <a href="@Url.Action("Create", "JobSeekers")"><p>Not a member? Create an account free.</p></a>
</div>
